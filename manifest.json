{
  "manifest_version": 2,
  "name": "CoronaBlock",
  "permissions": [
    "storage"
  ],
  "version": "1.0.0",
  "description": "Replaces coronavirus references on web pages (in English and Russian languages)",
  "browser_action": {
    "default_title": "CoronaBlock",
    "default_popup": "browser_action/popup.html",
    "default_icon": {
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/script.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}